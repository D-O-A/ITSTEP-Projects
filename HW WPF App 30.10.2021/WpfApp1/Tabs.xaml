<Window x:Class="WpfApp1.Tabs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Tabs" Height="450" Width="800" Background="Bisque"
        MouseMove="StackPanel_MouseMove"
        MouseDown="Canvas_MouseDown"
        MouseUp="Canvas_MouseUp"
        MouseDoubleClick="window_MouseDoubleClick">
    
    <TabControl>
        <TabItem Header="Tab 1">
            <TextBlock>
                Вкладка 1
            </TextBlock>
        </TabItem>
        
        <TabItem Header="События мыши" Background="Bisque">
            <StackPanel>
                <StackPanel 
                Orientation="Horizontal">
                    <TextBlock Text="X: "/>
                    <TextBlock x:Name="MouseX" Width="30"/>
                    <TextBlock Text="Y: "/>
                    <TextBlock x:Name="MouseY" Width="30"/>

                </StackPanel>

                <Canvas x:Name="Canvas" Width="750" Height="350"/>
            </StackPanel>
        </TabItem>
    </TabControl>

</Window>
